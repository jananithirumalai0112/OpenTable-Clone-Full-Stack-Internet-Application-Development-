@model OpenTableApp.Models.Metropolis

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Delete Metropolis</h1>

<h4>Are you sure you want to delete this Metropolis?</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>State</dt>
        <dd>@Model.State</dd>
        <dt>Country</dt>
        <dd>@Model.Country</dd>
    </dl>
</div>

<form asp-area="Admin" asp-controller="Metropolis" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" onclick="history.back();">Cancel</button>
    </div>
</form>
